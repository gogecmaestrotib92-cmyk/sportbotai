{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/blog/generate",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/blog/match-preview",
      "schedule": "0 6,12,18 * * *"
    },
    {
      "path": "/api/cron/morning-briefing",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/match-validation",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/weekly-stats",
      "schedule": "0 18 * * 0"
    },
    {
      "path": "/api/cron/prewarm-chat",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/live-intel",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/track-predictions",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/poll-odds",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/pre-analyze",
      "schedule": "0 6,7,8,9,18,19,20,21 * * *"
    },
    {
      "path": "/api/cron/fetch-clv",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/validate-cache",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/translate",
      "schedule": "30 0,3,6,8,10,12,14,16,18,21 * * *"
    },
    {
      "path": "/api/cron/backlink-scout?action=discover",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/backlink-scout?action=generate",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/backlink-scout?action=outreach",
      "schedule": "0 10 * * *"
    }
  ]
}
