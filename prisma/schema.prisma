// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// NEXTAUTH MODELS
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials auth
  
  // Subscription & Plan
  plan          Plan      @default(FREE)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?  @unique
  stripePriceId       String?
  stripeCurrentPeriodEnd DateTime?
  
  // Usage tracking
  analysisCount Int       @default(0)
  lastAnalysisDate DateTime?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  analyses      Analysis[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// SUBSCRIPTION PLANS
// ============================================

enum Plan {
  FREE      // 3 analyses per day
  PRO       // 30 analyses per day
  PREMIUM   // Unlimited analyses
}

// ============================================
// ANALYSIS HISTORY
// ============================================

model Analysis {
  id              String   @id @default(cuid())
  userId          String
  
  // Match info
  sport           String
  league          String
  homeTeam        String
  awayTeam        String
  matchDate       DateTime?
  
  // User input
  userPick        String?
  userStake       Float?
  
  // AI result summary
  homeWinProb     Float?
  drawProb        Float?
  awayWinProb     Float?
  riskLevel       String?
  bestValueSide   String?
  
  // Full response (JSON)
  fullResponse    Json?
  
  // Metadata
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
}

// ============================================
// BLOG SYSTEM - Automated SEO Content
// ============================================

model BlogKeyword {
  id              String   @id @default(cuid())
  keyword         String   @unique // The keyword/topic to write about
  status          KeywordStatus @default(PENDING)
  lastGeneratedAt DateTime?
  generationCount Int      @default(0)
  
  // SEO metrics (optional, can be added later)
  searchVolume    Int?
  difficulty      Int?
  
  posts           BlogPost[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([status])
  @@index([lastGeneratedAt])
}

model BlogPost {
  id              String   @id @default(cuid())
  
  // Content
  title           String
  slug            String   @unique
  excerpt         String   @db.Text
  content         String   @db.Text // Full HTML/markdown content
  
  // SEO
  metaTitle       String?
  metaDescription String?
  focusKeyword    String?
  
  // Media
  featuredImage   String?  // Vercel Blob URL
  imageAlt        String?
  
  // Categorization
  category        String?
  tags            String[] // Array of tags
  
  // Publishing
  status          PostStatus @default(DRAFT)
  publishedAt     DateTime?
  
  // AI Generation metadata
  keywordId       String?
  keyword         BlogKeyword? @relation(fields: [keywordId], references: [id])
  aiModel         String?      // e.g., "gpt-4o-mini", "perplexity"
  generationCost  Float?       // Cost in USD
  
  // Engagement (for future analytics)
  views           Int      @default(0)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([slug])
  @@index([status])
  @@index([publishedAt])
  @@index([keywordId])
}

enum KeywordStatus {
  PENDING     // Not yet used
  ACTIVE      // In rotation
  EXHAUSTED   // Too many posts generated
  DISABLED    // Manually disabled
}

enum PostStatus {
  DRAFT       // Not published
  PUBLISHED   // Live on site
  SCHEDULED   // Will publish at scheduledAt
  ARCHIVED    // Hidden from public
}
